{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "target": "ES2022",
    "module": "ESNext",
    "types": ["vitest/globals", "@gh-copilot-ext/commons/test-utils/globals"],
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "declarationMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/"]
}

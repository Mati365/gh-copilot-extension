{
  "extends": "../../tsconfig.json",
  "include": ["src/"],
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "types": [
      "vitest/globals",
      "chrome-types",
      "@gh-copilot-ext/commons/test-utils/globals"
    ],
    "paths": {
      "@ast": ["kernel/ast"],
      "@ast/*": ["kernel/ast/*"],
      "@ui": ["ui"],
      "@ui/*": ["ui/*"],
      "@kernel/*": ["kernel/*"],
      "@ot": ["kernel/ot"],
      "@ot/*": ["kernel/ot/*"],
      "@test-utils": ["../test/_utils"]
    }
  }
}

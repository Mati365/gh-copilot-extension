{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["build:dev"],
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "check:types": {
      "cache": true
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["tsconfig.json", "prettier.config.mjs"]
}
